<?xml version="1.0" encoding="utf-8"?>
<com.iamplus.aware.AwareSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slidinglayout"
    android:negativeButtonText="@string/message_cancel_text"
    android:negativeButtonVisibility="visible" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <at.bitfire.davdroid.syncadapter.MyWebView
            android:id="@+id/browser_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ZoomControls android:id="@+id/zoomctrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|right" />
    </FrameLayout>

</com.iamplus.aware.AwareSlidingLayout>
