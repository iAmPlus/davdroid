<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidinglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:negativeButtonText="@string/message_cancel_text"
    android:negativeButtonVisibility="visible" >

    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="finish"
        android:text="@android:string/cancel"
        android:paddingTop="@dimen/item_margin"
        android:paddingBottom="@dimen/item_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_normal" />

    <at.bitfire.davdroid.syncadapter.MyWebView
        android:id="@+id/browser_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cancel" />

</RelativeLayout>