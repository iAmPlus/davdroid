<?xml version="1.0" encoding="utf-8"?>
<com.iamplus.aware.AwareSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidinglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:positiveButtonText="@string/next_action"
    android:positiveButtonVisibility="visible" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/add_account_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="@string/account_creation_success"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/font_size_normal" />
    </FrameLayout>

</com.iamplus.aware.AwareSlidingLayout>